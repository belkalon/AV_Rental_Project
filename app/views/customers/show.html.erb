<p>
  <b>Phone:</b>
  <%= @customer.phone %>
</p>

<!-- want to show rentals here, if any -->
<p>
<% if @customer.rental.empty? %> <b>No Rentals</b>
<% else %>
	<%if @customer.rental.count == 1 %>
	<b>Rental:</b><br/>
	<% rent = @customer.rental %>
	<!-- use .first because rent is technically a relation/collection -->
	<%= link_to rent.first.event_name + ": "+rent.first.inventory.equipment_name, rent %><br />
	<% else %>
	<b><%=@customer.rental.count%> Rentals:</b><br/>
		<% @customer.rental.each do |rent| %>
		<%= link_to rent.event_name+": "+rent.inventory.equipment_name, rent %><br />
		<%end%>
	<% end %>
<%end%>
</p>

